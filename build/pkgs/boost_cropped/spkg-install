if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

echo "Copying over new boost headers"
mkdir -p "${SAGE_DESTDIR}${SAGE_LOCAL}"/include/
cp -r src/boost "${SAGE_DESTDIR}${SAGE_LOCAL}"/include/
if ! [ $? -eq 0 ]; then
    echo "Failed to install new boost headers."
    exit 1
fi

