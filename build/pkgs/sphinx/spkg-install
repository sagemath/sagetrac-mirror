#!/usr/bin/env bash

if [ -z "$SAGE_LOCAL" ]; then
    echo "SAGE_LOCAL undefined - exiting..."
    echo "Maybe run 'sage -sh'?"
    exit 1
fi

# Helper functions
success() {
    if [ $? -ne 0 ]; then
        echo "Error building Sphinx: '$1'"
        exit 1
    fi
}

CUR=`pwd`


cd src

# Install new version
echo "Installing Sphinx..."
$PIP_INSTALL .
success 'Error installing Sphinx'
echo

cd "$CUR"
echo "Creating grammar pickle..."
if [ "$SAGE_PYTHON3" = "yes" ]; then
    versions="2 3"
else
    versions="2"
fi

for ver in $versions
do
    python$ver create_grammar_pickle.py
    success "Error creating the grammar pickle, Python $ver"
    echo
done
