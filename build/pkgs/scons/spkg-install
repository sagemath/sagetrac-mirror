#!/bin/sh

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cd src/

rm -rf $SAGE_LOCAL/lib/scons-*

# scons does not work with pip
sage-python23 setup.py --no-user-cfg install

if [ $? -ne 0 ]; then
    echo "Error installing scons"
    exit 1
fi
