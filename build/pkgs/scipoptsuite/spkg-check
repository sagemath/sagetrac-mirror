#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting"
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cd src

echo "Now running the SCIP test suite..."
$MAKE check OPT=dbg
if [ $? -ne 0 ]; then
    echo >&2 "Error: The SCIP test suite failed."
    exit 1
fi
echo "The SCIP test suite passed successfully."
