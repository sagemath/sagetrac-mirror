#!/usr/bin/env bash

cd src

patch -p1 < ../patches/polymake_sage.patch || die "Error: Couldn't apply patch."

./configure --without-java \
            --without-javaview \
            --prefix="$SAGE_LOCAL" \
            --exec-prefix="$SAGE_LOCAL" \
            --includedir="$SAGE_LOCAL"/include \
            --bindir="$SAGE_LOCAL"/bin \
            --libdir="$SAGE_LOCAL"/lib
make
make install
