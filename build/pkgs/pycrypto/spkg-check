#!/usr/bin/env bash

if [ -z "$SAGE_LOCAL" ]; then
    echo >&2 "SAGE_LOCAL undefined ... exiting"
    echo >&2 "Maybe run 'sage --sh'?"
    exit 1
fi

cd src

echo "PyCrypto will now be tested"
sage-python23 setup.py test
if [ $? -ne 0 ]; then
    echo >&2 "Error: PyCrypto failed to pass its test suite."
    exit 1
fi
