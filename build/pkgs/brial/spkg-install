#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cd src

./configure \
    --prefix="$SAGE_LOCAL" \
    --libdir="$SAGE_LOCAL/lib" \
    --enable-shared --disable-static
if [ $? -ne 0 ]; then
    echo "Error configuring BRiAl"
    exit 1
fi

$MAKE
if [ $? -ne 0 ]; then
    echo "Error building BRiAl"
    exit 1
fi

$MAKE install -j1
if [ $? -ne 0 ]; then
    echo "Error installing BRiAl"
    exit 1
fi
