#!/usr/bin/env bash

cd src

./configure --disable-gui --prefix="$SAGE_LOCAL" --libdir="$SAGE_LOCAL/lib"
if [ $? -ne 0 ]; then
    echo >&2 "Error configuring Gambit."
    exit 1
fi

$MAKE
if [ $? -ne 0 ]; then
    echo >&2 "Error building Gambit."
    exit 1
fi

$MAKE -j1 install
if [ $? -ne 0 ]; then
    echo >&2 "Error installing Gambit."
    exit 1
fi

if [ "$SAGE_PYTHON3" = "yes" ]; then
    versions="2 3"
else
    versions="2"
fi

cd src/python

for ver in $versions
do
    python$ver setup.py --no-user-cfg build install
    if [ $? -ne 0 ]; then
        echo "Error installing Python $ver API"
        exit 1
    fi
done
