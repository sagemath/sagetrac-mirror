#!/usr/bin/env bash

cd src

./configure --prefix="$SAGE_LOCAL" --libdir="$SAGE_LOCAL/lib"
if [ $? -ne 0 ]; then
    echo >&2 "Error configuring curl."
    exit 1
fi

$MAKE
if [ $? -ne 0 ]; then
    echo >&2 "Error building curl."
    exit 1
fi

$MAKE install
if [ $? -ne 0 ]; then
    echo >&2 "Error installing curl."
    exit 1
fi
