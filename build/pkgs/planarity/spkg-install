#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cd src &&
./configure --prefix="$SAGE_LOCAL" &&
make &&
make install

if [ $? -ne 0 ]; then
    echo "An error occurred whilst building planarity"
    exit 1
fi
