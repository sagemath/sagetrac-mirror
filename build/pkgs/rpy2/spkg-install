#!/usr/bin/env bash

if [ -z "$SAGE_LOCAL" ]; then
    echo >&2 "SAGE_LOCAL undefined ... exiting"
    echo >&2 "Maybe run 'sage --sh'?"
    exit 1
fi

set -e

cd src

# Apply patches.
# See SPKG.txt for information about what each patch does.
for patch in ../patches/*.patch; do
    patch -p1 <"$patch"
done

export RHOMES="$SAGE_LOCAL"/lib/R

$PIP_INSTALL .
