#!/usr/bin/env bash

cd src

./bootstrap --prefix=$SAGE_LOCAL \
    --system-bzip2 \
    --system-zlib \
    -- \
    -DCMAKE_PREFIX_PATH=$SAGE_LOCAL/lib \
    -DBZIP2_INCLUDE_DIR=$SAGE_LOCAL/include \
    -DZLIB_INCLUDE_DIR=$SAGE_LOCAL/include \
    -DCMAKE_TESTS_CDASH_SERVER=NOTFOUND

if [ $? -ne 0 ]; then
    echo >&2 "Error configuring CMake."
    exit 1
fi

$MAKE install
if [ $? -ne 0 ]; then
    echo >&2 "Error installing CMake."
    exit 1
fi
