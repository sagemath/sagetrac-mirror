# Usage: newest_version $pkg
# return version number of latest standard package $pkg
# FIXME: allow overrides
define newest_version
$(shell \
    PKG="$(1)";\
    if [ -f "@abs_top_srcdir@/$(PKGSDIR)/$$PKG/package-version.txt" ]; then\
        echo -n $$PKG-;\
        cat "@abs_top_srcdir@/$(PKGSDIR)/$$PKG/package-version.txt";\
    else\
        echo >&2 "Cannot determine latest version of $$PKG.";\
        echo -n "$$PKG-unknown";\
    fi;)
endef

