# unstage all installations of $*. shouldn't be more than one at a time.
$(FOREIGN_ALL:%=%-unstage): %-unstage:
	$(AM_V_at)if test -n "$$(shopt -s nullglob; echo $(INST)/$*-*)"; then \
	  dirs=;\
	  echo $(INST)/$*-*; \
	  while read f; do \
	    [ -n "$${f/\/*/}" ] && \
		   echo "BUG in $* filelist: relative path: $$f" && continue; \
	    [ -d $$f ] && dirs+="$$f" || rm $$f; \
	  done < $$(echo $(INST)/$*-*); \
	  for i in $$dirs; do \
	    rmdir $$i; \
	  done; \
	  rm -f $(INST)/$*-*; \
	else \
	  echo "no $* staged..."; \
	fi

