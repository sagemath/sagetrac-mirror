upstream/%.tar.bz2: | $(PKGSDIR)/$$(firstword $$(subst -, ,$$*))/checksums.ini
	@echo downloading $(notdir $@)
	$(downloadit)
	$(AM_V_at)dlsum=$$(sha1sum $@ | cut -f1 -d' ');\
	refsum=$$(grep sha1 $| | cut -d= -f2);\
	test $$dlsum = $$refsum || \
	( echo expected sha1: $$refsum;\
	  echo got      sha1: $$dlsum;\
	  rm $@; exit 1 )
	@touch $@ # wget will apply the remote mtime

