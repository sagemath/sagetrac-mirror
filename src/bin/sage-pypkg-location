#!/usr/bin/env python
from __future__ import print_function
from pkg_resources import Requirement, working_set
import sys

if __name__ == "__main__":
    help_message = """
Usage: {0} <package>
""".format(sys.argv[0])
    if len(sys.argv) < 2:
        print(help_message)
        exit(1)
    else:
        location = working_set.find(Requirement.parse(sys.argv[1])).location
        print(location)





